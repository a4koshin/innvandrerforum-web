generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  role      String   // "ADMIN" or "USER"
  createdAt DateTime @default(now())
}


model Newsletter {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  imageUrl    String
  imageId     String   // ðŸ‘ˆ Cloudinary public_id
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
